CC       = gcc
SOURCES  = $(wildcard *.c)
OBJECTS  = $(SOURCES:.c=.o)
LIBS     = -lSDL2 -lc -lz ./libpng/libpng16.a
BIN      = libTilengine.so
CFLAGS   = -msse2 -m32 -std=c99 -fpic -O2 -DLIB_EXPORTS -I"libpng"
RM       = rm

.PHONY: all all-before all-after clean clean-custom

all: all-before $(BIN) all-after

clean: clean-custom
	${RM} $(OBJECTS) $(BIN)

$(BIN): $(OBJECTS)
	$(CC) -shared $(OBJECTS) -o $(BIN) $(LIBS) -s -fvisibility=hidden
	cp $(BIN) ../lib/linux_i686

%.o: %.c
	$(CC) -c $(CFLAGS) $< -o $@
